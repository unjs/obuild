{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "composite": true,
    "isolatedDeclarations": false,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "paths": {
      "#prop-types": ["./src/prop-types"],
      "#prop-types/*": ["./src/prop-types/*"]
    }
  },
  "include": ["src"]
}
