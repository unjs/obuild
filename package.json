{
  "name": "obuild",
  "version": "0.2.1",
  "description": "Zero-config ESM/TS package builder",
  "repository": "unjs/obuild",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs",
    "./config": "./dist/config.mjs"
  },
  "types": "./dist/index.d.mts",
  "bin": "./dist/cli.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm obuild",
    "dev": "pnpm vitest",
    "lint": "eslint . && prettier -c src test",
    "lint:fix": "automd && eslint . --fix && prettier -w src test",
    "node-ts": "node --disable-warning=ExperimentalWarning --experimental-strip-types",
    "obuild": "pnpm node-ts src/cli.ts",
    "prepack": "pnpm build",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && pnpm test:types && pnpm vitest run --coverage",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "c12": "^3.2.0",
    "consola": "^3.4.2",
    "defu": "^6.1.4",
    "exsolve": "^1.0.7",
    "magic-string": "^0.30.17",
    "oxc-minify": "^0.81.0",
    "oxc-parser": "^0.81.0",
    "oxc-transform": "^0.81.0",
    "pretty-bytes": "^7.0.0",
    "rolldown": "1.0.0-beta.31",
    "rolldown-plugin-dts": "^0.15.5",
    "tinyglobby": "^0.2.14"
  },
  "devDependencies": {
    "@types/node": "^22.17.0",
    "@vitest/coverage-v8": "^3.2.4",
    "automd": "^0.4.0",
    "changelogen": "^0.6.2",
    "eslint": "^9.32.0",
    "eslint-config-unjs": "^0.5.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.14.0"
}
