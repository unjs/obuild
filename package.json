{
  "name": "obuild",
  "version": "0.0.7",
  "description": "Zero-config ESM/TS package builder",
  "repository": "unjs/obuild",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs",
    "./config": "./dist/config.mjs"
  },
  "types": "./dist/index.d.mts",
  "bin": "./dist/cli.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm obuild && chmod +x ./dist/cli.mjs",
    "obuild": "pnpm node-ts src/cli.ts",
    "lint": "eslint . && prettier -c src test",
    "lint:fix": "automd && eslint . --fix && prettier -w src test",
    "node-ts": "node --disable-warning=ExperimentalWarning --experimental-strip-types",
    "prepack": "pnpm build",
    "release": "pnpm test && changelogen --release && npm publish && git push --follow-tags",
    "test": "pnpm lint && pnpm test:types && pnpm test:fixture",
    "test:fixture": "pnpm obuild --dir test/fixture src/index src/runtime/:dist/runtime",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "c12": "^3.0.3",
    "consola": "^3.4.2",
    "exsolve": "^1.0.5",
    "magic-string": "^0.30.17",
    "oxc-parser": "^0.69.0",
    "oxc-transform": "^0.69.0",
    "rolldown": "npm:rolldown@1.0.0-beta.8-commit.d95f99e",
    "rolldown-plugin-dts": "^0.12.1",
    "tinyglobby": "^0.2.13"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "automd": "^0.4.0",
    "changelogen": "^0.6.1",
    "eslint": "^9.26.0",
    "eslint-config-unjs": "^0.4.2",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.10.0"
}
